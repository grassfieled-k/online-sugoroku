<h1>Jobs</h1>

<% unless notice.blank? %>
<div class="card bg-light mb-3">
  <div class="card-body">
    <p id="notice" class="m-0"><%= notice %></p>
  </div>
</div>
<% end %>

<table class="table table-stripe table-responsive">
  <thead>
    <tr>
      <th>Job name</th>
      <th>Job type</th>
      <th>Salary</th>
      <th>Explanation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_name %></td>
        <td><%= job.job_type_id %></td>
        <td><%= job.salary %></td>
        <td><%= job.explanation %></td>
        <td><%= link_to 'Show', job, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', job, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path, class: 'btn btn-primary' %>
