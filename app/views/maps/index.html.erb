<h1>Maps</h1>

<% unless notice.blank? %>
<div class="card bg-light mb-3">
  <div class="card-body">
    <p id="notice" class="m-0"><%= notice %></p>
  </div>
</div>
<% end %>

<table class="table table-stripe table-responsive">
  <thead>
    <tr>
      <th>Map name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
        <td><%= map.map_name %></td>
        <td><%= link_to 'Show', map, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_map_path(map), class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Destroy', map, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path, class: 'btn btn-primary' %>
